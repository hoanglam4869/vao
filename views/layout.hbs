<!-- views/layout.hbs -->
<!DOCTYPE html>
<html>
<head>
  <title>{{ title }}</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"> <!-- Đường dẫn đến tệp style.css -->
</head>
<body>
  <header>
    <h1>Header - Your Website Name</h1>
  </header>
  <div class="content">
    {{{ body }}} <!-- Đây là nơi nội dung của các trang cụ thể sẽ được chèn vào -->
  </div>
  <footer>
    <p>Footer - &copy; Your Website Name {{ year }}</p>
  </footer>

  <button class="yellow-bg" id="myButton">Click Me</button> <!-- Nút hiển thị với lớp yellow-bg từ style.css -->
</body>
</html>
